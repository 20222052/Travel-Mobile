@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard";
}


    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@ViewBag.TotalOrders</h3>

                        <p>Tổng đơn hàng</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="/Admin/Order" class="small-box-footer">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@ViewBag.NewOrders</h3>

                        <p>Đơn hàng mới (tháng này)</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="/Admin/Order" class="small-box-footer">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>@ViewBag.TotalUsers</h3>

                        <p>Tổng người dùng</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="/Admin/User" class="small-box-footer">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@ViewBag.PendingOrders</h3>

                        <p>Đơn chờ xử lý</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="/Admin/Order" class="small-box-footer">Xem chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        
        <!-- Thống kê chi tiết -->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thống kê chi tiết</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-blue"><i class="fa fa-check-circle"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Hoàn thành (tháng này)</span>
                                        <span class="info-box-number">@ViewBag.CompletedOrders</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-red"><i class="fa fa-times-circle"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Đã hủy (tháng này)</span>
                                        <span class="info-box-number">@ViewBag.CancelledOrders</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-purple"><i class="fa fa-map-marker"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Tổng số tour</span>
                                        <span class="info-box-number">@ViewBag.TotalTours</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <div class="info-box">
                                    <span class="info-box-icon bg-orange"><i class="fa fa-user-plus"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Người dùng mới (tháng này)</span>
                                        <span class="info-box-number">@ViewBag.NewUsers</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
                <!-- Đơn hàng theo trạng thái -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Phân bố đơn hàng theo trạng thái</h3>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Trạng thái</th>
                                        <th>Số lượng</th>
                                        <th>Tỷ lệ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.OrdersByStatus != null)
                                    {
                                        var total = ViewBag.TotalOrders > 0 ? ViewBag.TotalOrders : 1;
                                        foreach (var item in ViewBag.OrdersByStatus)
                                        {
                                            var statusText = "";
                                            var statusColor = "";
                                            switch (item.Status)
                                            {
                                                case 0:
                                                    statusText = "Chờ xác nhận";
                                                    statusColor = "bg-yellow";
                                                    break;
                                                case 1:
                                                    statusText = "Đã xác nhận";
                                                    statusColor = "bg-blue";
                                                    break;
                                                case 2:
                                                    statusText = "Đang giao";
                                                    statusColor = "bg-light-blue";
                                                    break;
                                                case 3:
                                                    statusText = "Đã giao";
                                                    statusColor = "bg-green";
                                                    break;
                                                case 4:
                                                    statusText = "Đã hủy";
                                                    statusColor = "bg-red";
                                                    break;
                                            }
                                            var percentage = (item.Count * 100.0 / total).ToString("F1");
                                            <tr>
                                                <td><span class="badge @statusColor">@statusText</span></td>
                                                <td>@item.Count</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar @statusColor" style="width: @percentage%"></div>
                                                    </div>
                                                    <span class="badge">@percentage%</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
            <!-- right col -->
            <section class="col-lg-5 connectedSortable">
                <!-- Đơn hàng theo tháng -->
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Đơn hàng 6 tháng gần nhất</h3>
                    </div>
                    <div class="box-body">
                        @if (ViewBag.OrdersPerMonth != null && ViewBag.OrdersPerMonth.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Tháng</th>
                                            <th>Số đơn hàng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.OrdersPerMonth)
                                        {
                                            <tr>
                                                <td>Tháng @item.Month/@item.Year</td>
                                                <td>
                                                    <span class="badge bg-green">@item.Count đơn</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-muted">Chưa có dữ liệu</p>
                        }
                    </div>
                </div>
                
                <!-- Thống kê nhanh -->
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Tóm tắt hệ thống</h3>
                    </div>
                    <div class="box-body">
                        <ul class="list-unstyled">
                            <li>
                                <i class="fa fa-shopping-cart text-aqua"></i>
                                Tổng đơn hàng: <strong>@ViewBag.TotalOrders</strong>
                            </li>
                            <li style="margin-top: 10px;">
                                <i class="fa fa-clock-o text-yellow"></i>
                                Đơn chờ xử lý: <strong>@ViewBag.PendingOrders</strong>
                            </li>
                            <li style="margin-top: 10px;">
                                <i class="fa fa-check text-green"></i>
                                Hoàn thành (tháng này): <strong>@ViewBag.CompletedOrders</strong>
                            </li>
                            <li style="margin-top: 10px;">
                                <i class="fa fa-times text-red"></i>
                                Đã hủy (tháng này): <strong>@ViewBag.CancelledOrders</strong>
                            </li>
                            <li style="margin-top: 10px;">
                                <i class="fa fa-users text-blue"></i>
                                Tổng người dùng: <strong>@ViewBag.TotalUsers</strong>
                            </li>
                            <li style="margin-top: 10px;">
                                <i class="fa fa-user-plus text-orange"></i>
                                Người dùng mới (tháng này): <strong>@ViewBag.NewUsers</strong>
                            </li>
                            <li style="margin-top: 10px;">
                                <i class="fa fa-map-marker text-purple"></i>
                                Tổng số tour: <strong>@ViewBag.TotalTours</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
