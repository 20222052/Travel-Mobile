@model project.Models.Blog
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Blogs";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 px-3">SỬA BÀI VIẾT</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" />

                        <div class="form-group px-3">
                            <label>Ảnh hiện tại</label><br />
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="~/Uploads/@Model.Image" id="currentImage" width="120" class="mb-2 rounded" style="border: 2px solid #dee2e6;" />
                            }
                            else
                            {
                                <p class="text-muted"><i>Chưa có ảnh</i></p>
                            }
                            <br />
                            <label asp-for="ImageFile">Thay đổi ảnh (không bắt buộc)</label>
                            <input asp-for="ImageFile" 
                                   type="file" 
                                   class="form-control" 
                                   accept="image/*"
                                   data-validate-image
                                   data-preview="imagePreview" />
                            <div class="invalid-feedback">
                                Chỉ chấp nhận file ảnh (JPG, PNG, GIF - tối đa 5MB)
                            </div>
                            <img id="imagePreview" class="image-preview mt-2" style="display:none;" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3">
                            <label asp-for="Title" class="required-field">Tiêu đề</label>
                            <input asp-for="Title" 
                                   class="form-control" 
                                   placeholder="Nhập tiêu đề bài viết"
                                   required 
                                   minlength="5"
                                   maxlength="200" />
                            <div class="invalid-feedback">
                                Vui lòng nhập tiêu đề (5-200 ký tự)
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3">
                            <label asp-for="CategoryId" class="required-field">Chuyên mục</label>
                            <select asp-for="CategoryId" class="form-control" required>
                                <option value="">-- Chọn chuyên mục --</option>
                                @foreach (var item in ViewBag.Category)
                                {
                                    <option value="@item.Id" selected="@(Model.CategoryId == item.Id ? "selected" : null)">
                                        @item.Type
                                    </option>
                                }
                            </select>
                            <div class="invalid-feedback">
                                Vui lòng chọn chuyên mục
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3">
                            <label asp-for="Content" class="required-field">Nội dung</label>
                            <textarea asp-for="Content" 
                                      rows="5" 
                                      class="form-control"
                                      placeholder="Nhập nội dung bài viết"
                                      required
                                      minlength="20"></textarea>
                            <div class="invalid-feedback">
                                Vui lòng nhập nội dung (tối thiểu 20 ký tự)
                            </div>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end px-3">
                            <button type="submit" class="btn btn-success mr-2 btn-submit">
                                <i class="fa fa-save"></i> Cập nhật
                            </button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
