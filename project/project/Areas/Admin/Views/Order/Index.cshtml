
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Orders";
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    string search = ViewData["CurrentFilter"] as string;
}

<style>
    /* Compact button styling for order actions */
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        margin: 1px;
    }
    
    /* Make status badges more prominent */
    .badge {
        padding: 0.35em 0.65em;
        font-size: 0.9em;
    }
    
    /* Ensure action column doesn't wrap awkwardly */
    td form {
        margin: 0;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Tìm theo tên, email, phone..." style="width: 250px;" />
    <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
    <select name="statusFilter" class="form-control mr-2" style="width: 150px;">
        <option value="">Tất cả trạng thái</option>
        <option value="0" selected="@(ViewData["StatusFilter"]?.ToString() == "0")">Chờ xác nhận</option>
        <option value="1" selected="@(ViewData["StatusFilter"]?.ToString() == "1")">Đã xác nhận</option>
        <option value="2" selected="@(ViewData["StatusFilter"]?.ToString() == "2")">Đang giao</option>
        <option value="3" selected="@(ViewData["StatusFilter"]?.ToString() == "3")">Đã giao</option>
        <option value="4" selected="@(ViewData["StatusFilter"]?.ToString() == "4")">Đã hủy</option>
    </select>
    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Tìm kiếm</button>
    <a asp-action="Index" class="btn btn-secondary ml-2"><i class="fa fa-refresh"></i> Reset</a>
</form>
<div class="container-fluid mt-4" style="margin-top:15px;">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0" style="padding: 15px;">DANH SÁCH ĐẶT HÀNG</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tour</th>
                                    <th>User</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Tên <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>Địa chỉ</th>
                                    <th>Giới tính</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Trạng thái <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Ngày đặt <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Tour?.Name</td>
                                        <td>@item.User?.Email</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.Gender</td>
                                        <td>
                                            <span class="badge @item.GetStatusBadgeClass()">@item.GetStatusText()</span>
                                        </td>
                                        <td>@item.Date?.ToString("dd/MM/yyyy")</td>
                                        <td style="white-space: nowrap;">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            
                                            @* Buttons based on current status *@
                                            @if (item.Status == 0) @* Chờ xác nhận *@
                                            {
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="1" />
                                                    <button type="submit" class="btn btn-info btn-sm" title="Xác nhận đơn hàng">
                                                        <i class="fa fa-check"></i> Xác nhận
                                                    </button>
                                                </form>
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="4" />
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Hủy đơn hàng">
                                                        <i class="fa fa-times"></i> Hủy
                                                    </button>
                                                </form>
                                            }
                                            else if (item.Status == 1) @* Đã xác nhận *@
                                            {
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="2" />
                                                    <button type="submit" class="btn btn-primary btn-sm" title="Chuyển sang đang giao">
                                                        <i class="fa fa-truck"></i> Giao hàng
                                                    </button>
                                                </form>
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="4" />
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Hủy đơn hàng">
                                                        <i class="fa fa-times"></i> Hủy
                                                    </button>
                                                </form>
                                            }
                                            else if (item.Status == 2) @* Đang giao *@
                                            {
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="3" />
                                                    <button type="submit" class="btn btn-success btn-sm" title="Hoàn thành đơn hàng">
                                                        <i class="fa fa-check-circle"></i> Đã giao
                                                    </button>
                                                </form>
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="1" />
                                                    <button type="submit" class="btn btn-secondary btn-sm" title="Quay lại đã xác nhận">
                                                        <i class="fa fa-undo"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (item.Status == 3) @* Đã giao *@
                                            {
                                                <span class="text-success"><i class="fa fa-check-circle"></i> Hoàn thành</span>
                                            }
                                            else if (item.Status == 4) @* Đã hủy *@
                                            {
                                                <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" style="display:inline">
                                                    <input type="hidden" name="status" value="0" />
                                                    <button type="submit" class="btn btn-secondary btn-sm" title="Khôi phục đơn hàng">
                                                        <i class="fa fa-undo"></i> Khôi phục
                                                    </button>
                                                </form>
                                            }
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Phân trang nếu có -->
                    @* Chèn Razor pagination helper nếu có *@
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                <ul class="pagination">
                    <li class="paginate_button previous @(currentPage == 1 ? "disabled" : "")" id="example2_previous">
                        <a href="@Url.Action("Index", new { page =(currentPage == 1 ? 1: currentPage - 1), searchString = search, sortOrder = ViewData["CurrentSort"] })" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="paginate_button @(i == currentPage ? "active" : "")">
                            <a class="page-link" aria-controls="example2" href="@Url.Action("Index", new { page = i, searchString = search, sortOrder = ViewData["CurrentSort"] })">@i</a>
                        </li>
                    }
                    <li class="paginate_button next @(currentPage >= totalPages ? "disabled" : "")" id="example2_next">
                        <a href="@Url.Action("Index", new { page = (currentPage >= totalPages ? totalPages:currentPage + 1), searchString = search, sortOrder = ViewData["CurrentSort"] })" aria-controls="example2" data-dt-idx="7" tabindex="0">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>