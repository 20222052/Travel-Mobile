@model project.Models.Tour
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Users";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 px-3" style="padding: 5px 15px;">THÊM MỚI </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="ImageFile" class="required-field">Ảnh tour</label>
                            <input asp-for="ImageFile" 
                                   class="form-control" 
                                   type="file" 
                                   accept="image/*"
                                   data-validate-image
                                   data-preview="imagePreview"
                                   required />
                            <div class="invalid-feedback">
                                Vui lòng chọn ảnh cho tour (JPG, PNG, GIF - tối đa 5MB)
                            </div>
                            <img id="imagePreview" class="image-preview mt-2" style="display:none;" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-row px-3">
                            <div class="form-group col-md-6">
                                <label asp-for="Name" class="required-field">Tên tour</label>
                                <input asp-for="Name" 
                                       class="form-control" 
                                       placeholder="Nhập tên tour"
                                       required 
                                       minlength="3"
                                       maxlength="200" />
                                <div class="invalid-feedback">
                                    Vui lòng nhập tên tour (3-200 ký tự)
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="CategoryId" class="required-field">Thể loại</label>
                                <select asp-for="CategoryId" class="form-control" required>
                                    <option value="">-- Chọn thể loại --</option>
                                    @foreach (var item in ViewBag.Category)
                                    {
                                        <option value="@item.Id">@item.Type</option>
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Vui lòng chọn thể loại tour
                                </div>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Location" class="required-field">Địa điểm</label>
                            <input asp-for="Location" 
                                   class="form-control" 
                                   placeholder="Nhập địa điểm tour"
                                   required 
                                   minlength="3"
                                   maxlength="200" />
                            <div class="invalid-feedback">
                                Vui lòng nhập địa điểm (3-200 ký tự)
                            </div>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Duration" class="required-field">Thời gian (ngày)</label>
                            <input asp-for="Duration" 
                                   class="form-control" 
                                   type="number"
                                   placeholder="Nhập số ngày"
                                   required 
                                   min="1"
                                   max="365"
                                   data-validate-positive />
                            <div class="invalid-feedback">
                                Vui lòng nhập thời gian (1-365 ngày)
                            </div>
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="form-row px-3">
                            <div class="form-group col-md-6">
                                <label asp-for="Price" class="required-field">Giá (VNĐ)</label>
                                <input asp-for="Price" 
                                       class="form-control" 
                                       type="number"
                                       placeholder="Nhập giá tour"
                                       required 
                                       min="0"
                                       data-validate-positive />
                                <div class="invalid-feedback">
                                    Vui lòng nhập giá hợp lệ (≥ 0)
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="People" class="required-field">Số người</label>
                                <input asp-for="People" 
                                       class="form-control" 
                                       type="number"
                                       placeholder="Nhập số người"
                                       required 
                                       min="1"
                                       max="1000"
                                       data-validate-positive />
                                <div class="invalid-feedback">
                                    Vui lòng nhập số người (1-1000)
                                </div>
                                <span asp-validation-for="People" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group px-3" style="padding:0 15px;">
                            <label asp-for="Description" class="required-field">Mô tả</label>
                            <textarea asp-for="Description" 
                                      id="Description" 
                                      class="form-control"
                                      rows="5"
                                      placeholder="Nhập mô tả chi tiết về tour"
                                      required
                                      minlength="20"></textarea>
                            <div class="invalid-feedback">
                                Vui lòng nhập mô tả (tối thiểu 20 ký tự)
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end px-3">
                            <button type="submit" class="btn btn-success mr-2 btn-submit">
                                <i class="fa fa-save"></i> Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Huỷ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
