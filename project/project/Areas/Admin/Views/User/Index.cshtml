
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Users";
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    string search = ViewData["CurrentFilter"] as string;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Nhập thông tin tìm kiếm..." />
    <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Tìm kiếm</button>
    <a asp-action="Index" class="btn btn-secondary ml-2"><i class="fa fa-refresh"></i> Làm mới</a>
</form>
<div class="container-fluid mt-4" style="margin-top:15px;">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0" style="padding: 15px;">DANH SÁCH NGƯỜI DÙNG</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Id</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Họ tên <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>Ảnh đại diện</th>
                                    <th>Giới tính</th>
                                    <th>Địa chỉ</th>
                                    <th>Điện thoại</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Email <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>Ngày sinh</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["UsernameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Tài khoản <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>Mật khẩu</th>
                                    <th>Quyền</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="text-dark">
                                            Ngày tạo <i class="fa fa-sort"></i>
                                        </a>
                                    </th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td><img src="~/Uploads/@item.Image" width="20px" /></td>
                                        <td>@item.Gender</td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Username</td>
                                        <td style="max-width: 30px;overflow: auto;">
                                            @item.Password
                                        </td> 
                                        <td>@item.Role</td>
                                        <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xoá?');">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Phân trang nếu có -->
                    @* Chèn Razor pagination helper nếu có *@
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                <ul class="pagination">
                    <li class="paginate_button previous @(currentPage == 1 ? "disabled" : "")" id="example2_previous">
                        <a href="@Url.Action("Index", new { page =(currentPage == 1 ? 1: currentPage - 1), searchString = search, sortOrder = ViewData["CurrentSort"] })" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="paginate_button @(i == currentPage ? "active" : "")">
                            <a class="page-link" aria-controls="example2" href="@Url.Action("Index", new { page = i, searchString = search, sortOrder = ViewData["CurrentSort"] })">@i</a>
                        </li>
                    }
                    <li class="paginate_button next @(currentPage >= totalPages ? "disabled" : "")" id="example2_next">
                        <a href="@Url.Action("Index", new { page = (currentPage >= totalPages ? totalPages:currentPage + 1), searchString = search, sortOrder = ViewData["CurrentSort"] })" aria-controls="example2" data-dt-idx="7" tabindex="0">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>