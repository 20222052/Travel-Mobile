			"name": "Authentication",
			"item": [
				{
					"name": "Login Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    console.log(\"Token saved: \" + jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/ApiAccountAdmin/login",
							"host": ["{{base_url}}"],
							"path": ["api", "ApiAccountAdmin", "login"]
						}
					},
					"response": []
				}
			]
		},
